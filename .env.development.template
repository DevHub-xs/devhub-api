# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# MongoDB Configuration - Local Development
MONGODB_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-dev?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SECRET_FOR_DEVELOPMENT
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_FOR_DEVELOPMENT
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Allow frontend to connect)
CORS_ORIGIN=http://localhost:4200

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
