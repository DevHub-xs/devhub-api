{
  "name": "devhub-api",
  "version": "0.2.1",
  "description": "Enterprise-grade Node.js API for Internal Developer Portal with microservices architecture",
  "main": "src/index.js",
  "type": "module",
  "author": "Pedro Accarini <paccarini.bar@outlook.com>",
  "license": "All Rights Reserved",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paccarini-bar/devhub-api.git"
  },
  "keywords": [
    "devhub",
    "api",
    "microservices",
    "developer-portal",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "rest-api"
  ],
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "node --env-file=.env.development --watch src/index.js",
    "start:cert": "node --env-file=.env.certification src/index.js",
    "start:prod": "node --env-file=.env.production src/index.js",
    "dev": "node --env-file=.env.development --watch src/index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "docker:db": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:db:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:db:logs": "docker-compose -f docker-compose.dev.yml logs -f mongodb",
    "docker:full": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
