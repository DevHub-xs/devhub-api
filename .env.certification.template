# Server Configuration
NODE_ENV=certification
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration - Certification Environment
MONGODB_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-cert?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-cert-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SECRET_FOR_CERTIFICATION
JWT_EXPIRES_IN=12h
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_FOR_CERTIFICATION
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
CORS_ORIGIN=https://cert.devhub.example.com

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
