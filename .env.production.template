# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration - Production Environment
MONGODB_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-prod?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://YOUR_DB_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/devhub-prod-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SECRET_FOR_PRODUCTION
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_FOR_PRODUCTION
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=50

# CORS Configuration
CORS_ORIGIN=https://devhub.example.com

# Logging
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_RATE_LIMITING=true
